<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="FaÃ§a sua escolha:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/textIniciar" />
    <ImageButton
        android:src="@drawable/pedra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPedra"
        android:layout_marginTop="50.0dp" 
        android:layout_marginLeft="20.0dp"/>
    <ImageButton
        android:src="@drawable/papel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPapel"
        android:layout_marginTop="50.0dp" 
        android:layout_marginLeft="145.0dp"/>
    <ImageButton
        android:src="@drawable/tesoura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTesoura"
        android:layout_marginTop="50.0dp" 
        android:layout_marginLeft="270.0dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/layoutBatalha">
        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="80px"
            android:layout_marginRight="100px"
            
            android:id="@+id/imageUsuario" />
        <TextView
            android:text="X"
            android:textAlignment="center"
            android:textSize="80px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textViewX" />
        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="80px"
            android:layout_marginLeft="100px"
            android:id="@+id/imageBot" />
    </LinearLayout>
    <TextView
        android:text=""
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="100px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textpontuacao"
        />
    <TextView
        android:text=""
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="100px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textResultado"
        />
</LinearLayout>